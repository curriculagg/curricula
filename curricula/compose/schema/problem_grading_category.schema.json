{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Problem Grading Schema",
  "description": "Points for problem and category weights.",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "minutes": {
      "type": "number",
      "minimum": 0
    },
    "weight": {
      "type": "string",
      "minimum": 0
    },
    "points": {
      "type": [
        "string",
        "null"
      ],
      "minimum": 0
    }
  },
  "required": []
}
